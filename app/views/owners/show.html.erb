<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", owners_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_owner_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", owner_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.owner.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @owner.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.owner.tele_number", :default => t("activerecord.labels.tele_number", :default => "Tele number")) %>:</b>
          <%= @owner.tele_number %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.owner.country", :default => t("activerecord.labels.country", :default => "Country")) %>:</b>
          <%= @owner.country %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.owner.city", :default => t("activerecord.labels.city", :default => "City")) %>:</b>
          <%= @owner.city %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_owner_path(@owner), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), owner_path(@owner), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
